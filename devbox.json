{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.15.0/.schema/devbox.schema.json",
  "packages": [
    "go@latest",
    "gopls@latest"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "build": [
        "go build -o juggle ./cmd/juggle"
      ],
      "test": [
        "go test -v ./internal/integration_test/..."
      ],
      "test-quiet": [
        "./scripts/test-quiet.sh"
      ],
      "test-verbose": [
        "go test -v ./internal/integration_test/..."
      ],
      "test-all": [
        "go test -v ./..."
      ],
      "test-coverage": [
        "go test -v -coverprofile=coverage.out ./internal/integration_test/...",
        "go tool cover -html=coverage.out -o coverage.html"
      ],
      "test-agent-integration": [
        "go test -v -tags=integration ./internal/agent_integration_test/..."
      ]
    }
  }
}
